{% extends 'base.html.twig' %}

{% block title %}Listes des formateurs{% endblock %}

{% block body %}

    <div><h3> Liste des formateurs</h3>
            {% if is_granted("ROLE_ADMIN")%}                                        
            <a style="float:right" class="nav-link" href="{{path('formateur_add')}}">
                <button type="button" class="btn btn-secondary" style="width: 190px">
                    Ajouter un formateur
                </button>
            </a>
        {% endif %}
    </div>
       <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Spécialité</th>

                        {% if is_granted("ROLE_ADMIN") %}               
                            <th scope="col"></th>
  
                        {% endif %}

                    {# <th scope="col">Telephone</th>
                    <th scope="col">Mail</th>  #}
                    
                </tr>
            </thead>
            <tbody>
                {% for formateur in formateurs %}
                <tr>
                    <td scope="row"><a href="{{ path('formateur_show', {'id': formateur.id}) }}">{{ formateur.nom }}</a></td>
                    <td>{{ formateur.prenom }}</td>
                    <td>{{ formateur.specialite }}</td>


                {% if is_granted("ROLE_ADMIN")%}   
                    <td style="float: right"><a class="btn btn-secondary" href="{{ path('formateur_edit', {'id': formateur.id}) }}">Modifier</a>
                    <a class="btn btn-secondary" href="{{ path('formateur_delete', {'id': formateur.id}) }}">X</a> </td>
                {% endif %}
                </tr>
            </tbody>
                {% endfor %}


{% endblock %}
