{% extends 'base.html.twig' %}

{% block title %}{{ formateur.prenom }} {{ formateur.nom }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>            
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Spécialité</th>
            <th scope="col">Date de Naissance</th>
            <th scope="col">Telephone</th>
            <th scope="col">Mail</th>
            <th scope="col">Adresse</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ formateur.prenom }}</td>
            <td scope="row">{{ formateur.nom }}</td>
            <td>{{ formateur.specialite }}</td>
            <td>{{ formateur.dateNaissance | date('d/m/Y') }}</td>
            <td>{{ formateur.telephone }}</td>
            <td><a href="mailto:{{ formateur.mail }}">{{ formateur.mail }}</a></td>
            <td>{{ formateur.adresse }}, {{ formateur.ville }} {{ formateur.codePostal }}</td>
        </tr>
    </tbody>
<br><br>
 


{% endblock %}
