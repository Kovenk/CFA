{% extends 'base.html.twig' %}

{% block title %}Listes des stagiaires{% endblock %}

{% block body %}
 <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style> 
    <div><h3> Liste des stagiaires</h3></div>
       <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Mail</th>

                    
                                        {% if is_granted("ROLE_ADMIN")%} 

                    {# <th scope="col"></th> #}

                    <th scope="col"></th>
                    
                         {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for stagiaire in stagiaires %}
                <tr>
                    <td><a href="{{ path('stagiaire_show', {'id': stagiaire.id}) }}">{{ stagiaire.nom }}</a></td>
                    <td>{{ stagiaire.prenom }}</td>
                    <td>{{ stagiaire.telephone }}</td>
                    <td>{{ stagiaire.mail }} </td>

                                                                                {% if is_granted("ROLE_ADMIN")%} 
                {# <td> <a class="btn btn-secondary" href="{{ path('inscription', {'id': stagiaire.id}) }}">Inscription</a></td> #}
                <td style="float: right"><a class="btn btn-secondary" href="{{ path('stagiaire_edit', {'id': stagiaire.id}) }}">Modifier</a>
                    <a class="btn btn-secondary" href="{{ path('stagiaire_delete', {'id': stagiaire.id}) }}">X</a>  </td> 
                {% endif %}
                </tr>
            </tbody>
              {% endfor %}
        </table>
            


{% endblock %}
